<% title post.title %>

<div class="">
  <div class="text-center"><h2 class="text-5xl mb-6"><%= post.title %></h2></div>
  <div class="text-center font-serif mb-6 text-grey-dark">
    <% post.tags.sort_by(&:name).each do |tag| %>
      <%= link_to tag.name, posts_path(tag: tag.name), class: 'no-underline text-grey-dark' %>
      <%= '&nbsp;&nbsp;&nbsp;'.html_safe unless tag == post.tags.last %>
    <% end %>
  </div>
  <div class="text-center font-serif mb-6"><%= post.date_line %></div>
  <div class="bg-purple-dark opacity-25 w-full h-px mb-6"></div>
    <% if authenticated? %>
      <%= link_to '', edit_post_url(post), class: "fa fa-pencil" %>
      <%= link_to '', post_url(post), method: :delete, class: "fa fa-trash", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <div id="post-content" class="leading-tight">
    <%= post.generate_markdown_html.html_safe %>
  </div>
</div>
