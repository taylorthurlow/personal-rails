<%= form_tag sessions_path, class: 'login_form' do %>
  <% if flash[:alert] %>
    <p class="flash--error"><%= flash[:alert] %></p>
  <% end %>

  <div class="login_form">
    <div class="input">
      <%= text_field_tag :username, params[:username], placeholder: 'username' %>
    </div>

    <div class="input">
      <%= password_field_tag :password, params[:password], placeholder: 'password' %>
    </div>

    <div class="input">
      <%= submit_tag "Login" %>
    </div>
  </div>

<% end %>
