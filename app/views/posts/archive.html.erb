<p id="notice"><%= notice %></p>

<% content_for :header_text do %>
  Post Archive
<% end %>

<table id="post-archive" class="border-collapse">
  <thead>
    <td>Pub</td>
    <td>Title</td>
    <td>Created</td>
    <td>Updated</td>
  </thead>

  <% @posts.each do |post| %>
    <tr>
      <td class="text-center"><%= post.published ? 'âœ“' : '' %></td>
      <td><%= link_to post.title, post_url(post) %></td>
      <td><%= post.created_at.localtime.strftime('%m/%e/%y') %></td>
      <td><%= post.updated_at.localtime.strftime('%m/%e/%y') %></td>
    </tr>
  <% end %>
</table>
