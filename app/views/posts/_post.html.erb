<div class="blog_post">
  <div class="blog_post_title"><h2><%= post.title %></h2></div>

  <div class="blog_post_date_line">
    <p><%= post.date_line %></p>
    <% if authenticated? %>
      <%= link_to '', edit_post_url(post), class: "fa fa-pencil" %>
      <%= link_to '', post_url(post), method: :delete, class: "fa fa-trash", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <div class="blog_post_contents">
    <%= post.generate_markdown_html.html_safe %>
  </div>
</div>
