<% title 'Blog' %>

<% if @tag %>
  <div class="post-tag-header">
    Viewing posts tagged '<%= @tag %>'
  </div>
  <div class="post-separator"></div>
<% end %>

<div id="post-index">
  <% @posts.each do |post| %>
    <div class="post-index-entry">
      <div class="post-index-entry-left">
        <% if post.image.attached? %>
          <%= image_tag url_for(post.image.variant(resize: '400x400')) if post.image.attached? %>
        <% else %>
          <%= image_tag 'logo-768', style: 'opacity: 0.1; margin-top: -0.1rem;' %>
        <% end %>
      </div>
      <div class="post-index-entry-right">
        <h2><%= link_to post.title, post_url(post) %></h2>
        <div class="post-index-entry-date"><%= post.date_line %></div>
      </div>
    </div>
  <% end %>
</div>

<div id="post-pages">
  <%= paginate @posts %>
</div>
