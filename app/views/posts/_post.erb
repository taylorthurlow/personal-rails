<div class="blog_post">
  <div class="blog_post_header">
    <h1 class="blog_post_title"><%= link_to post.title, post_url(post) %></h1>
    <% if is_authenticated? %>
      <ul>
        <li><%= link_to '', edit_post_url(post), class: "fa fa-pencil" %></li>
        <li><%= link_to '', post_url(post), method: :delete, class: "fa fa-trash", data: { confirm: 'Are you sure?' } %></li>
      </ul>
    <% end %>
    <span style="clear: both"></span>
  </div>
  <h3><%= post.date_line %></h3>
  <br />
  <div class="blog_post_contents">
    <%= post.generate_markdown_html.html_safe %>
  </div>
</div>