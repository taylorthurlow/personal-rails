<% title 'Blog' %>

<p id="notice"><%= notice %></p>

<% if @tag %>
  <div class="text-center mb-6 text-2xl">
    Viewing posts tagged '<%= @tag %>'
  </div>
  <div class="bg-purple-dark opacity-25 w-full h-px mb-6"></div>
<% end %>

<div>
  <% @posts.each do |post| %>
    <div class="pb-5">
      <h2 class="text-3xl mb-2"><%= link_to post.title, post_url(post), class: 'text-grey-darkest' %></h2>
      <div class="mb-4"><%= post.date_line %></div>
    </div>
  <% end %>
</div>

<div class="text-center">
  <%= paginate @posts %>
</div>
