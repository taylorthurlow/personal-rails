<h2>Post Archive</h2>

<table id="post-archive" class="border-collapse">
  <thead>
    <td>Pub</td>
    <td>Title</td>
    <td>Created</td>
    <td>Updated</td>
  </thead>

  <% @posts.each do |post| %>
    <tr>
      <td style="text-align: center;"><%= post.published ? 'âœ“' : '' %></td>
      <td><%= link_to post.title, post_url(post) %></td>
      <td><%= post.created_at.localtime.strftime('%m/%d/%y') %></td>
      <td><%= post.updated_at.localtime.strftime('%m/%d/%y') %></td>
    </tr>
  <% end %>
</table>
