<p id="notice"><%= notice %></p>

<% content_for :header_text do %>
  Post Archive
<% end %>

<table id="post_archive">
  <thead>
    <td>Pub</td>
    <td>Title</td>
    <td>Created</td>
    <td>Updated</td>
  </thead>

  <% @posts.each do |post| %>
  <tr>
    <td style="text-align: center;"><%= post.published ? 'âœ“' : '' %></td>
    <td><%= link_to post.title, post_url(post) %></td>
    <td><%= post.created_at.localtime.strftime('%b %e %Y, %l:%M %p') %></td>
    <td><%= post.updated_at.localtime.strftime('%b %e %Y, %l:%M %p') %></td>
  </tr>
  <% end %>
</table>
